using System; 
// Se importa la librería System para poder usar Console y otras funciones básicas

// Clase Estudiante
class Estudiante
{
    // Atributos que guardan la información del estudiante
    public int Id;               // Guarda el número de identificación del estudiante
    public string Nombres;       // Guarda los nombres del estudiante
    public string Apellidos;     // Guarda los apellidos del estudiante
    public string Direccion;     // Guarda la dirección del estudiante
    
    // Array que guarda tres números de teléfono
    // Se usa un array porque son varios datos del mismo tipo
    public string[] Telefonos = new string[3];
}

class Program
{
    static void Main(string[] args)
    {
        // Se crea un objeto de la clase Estudiante
        Estudiante est = new Estudiante();

        // Se pide al usuario que ingrese el ID del estudiante
        Console.WriteLine("Ingrese el ID:");
        est.Id = int.Parse(Console.ReadLine()); 
        // int.Parse convierte el texto ingresado a número entero

        // Se piden los nombres del estudiante
        Console.WriteLine("Ingrese los nombres:");
        est.Nombres = Console.ReadLine();

        // Se piden los apellidos del estudiante
        Console.WriteLine("Ingrese los apellidos:");
        est.Apellidos = Console.ReadLine();

        // Se pide la dirección del estudiante
        Console.WriteLine("Ingrese la dirección:");
        est.Direccion = Console.ReadLine();

        // Ciclo for para ingresar los teléfonos
        // El ciclo se repite según el tamaño del array
        for (int i = 0; i < est.Telefonos.Length; i++)
        {
            Console.WriteLine("Ingrese el teléfono " + (i + 1) + ":");
            est.Telefonos[i] = Console.ReadLine();
        }

        // Se muestran los datos ingresados
        Console.WriteLine("\n--- DATOS DEL ESTUDIANTE ---");
        Console.WriteLine("ID: " + est.Id);
        Console.WriteLine("Nombre: " + est.Nombres + " " + est.Apellidos);
        Console.WriteLine("Dirección: " + est.Direccion);

        // Se muestran los teléfonos usando foreach
        Console.WriteLine("Teléfonos:");
        foreach (string tel in est.Telefonos)
        {
            Console.WriteLine(tel);
        }
    }
}
